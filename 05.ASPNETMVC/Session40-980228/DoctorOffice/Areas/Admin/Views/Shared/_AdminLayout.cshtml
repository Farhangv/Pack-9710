<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - مدیریت اتوماسیون مطب</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/MdBootstrapPersianDateTimePicker/jquery.Bootstrap-PersianDateTimePicker.css" rel="stylesheet" />
</head>
<body>
    <header class="container">
        <div class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("مدیریت اتوماسیون مطب", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="@Url.Action("Index", "Home")">
                                <span class="glyphicon glyphicon-home"></span>
                            </a>
                        </li>
                        <li>@Html.ActionLink("مدیریت مراجعین", "Index", "Patients")</li>
                        <li>@Html.ActionLink("مدیریت پرسنل", "Index", "Staffs")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="pull-right">&copy; @DateTime.Now.Year - کهکشان</p>
            <p class="pull-left">
                @Html.ActionLink("بازگشت به سایت اصلی", "Index", "Home", new { area = "" }, null)
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/MdBootstrapPersianDateTimePicker/jalaali.js"></script>
    <script src="~/Scripts/MdBootstrapPersianDateTimePicker/jquery.Bootstrap-PersianDateTimePicker.js"></script>
    <script type="text/javascript">
        $('.persian-date').MdPersianDateTimePicker({
            Placement: 'right',
            Trigger: 'click',
            EnableTimePicker: false,
            TargetSelector: '.persian-date',
            GroupId: '',
            ToDate: false,
            FromDate: false,
            DisableBeforeToday: false,
            Disabled: false,
            Format: 'yyyy/MM/dd',
            IsGregorian: false,
            EnglishNumber: true,
            InLine: false
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
